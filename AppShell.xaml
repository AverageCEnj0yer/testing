<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="testing.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:testing.View">

    <ShellContent
        Title="Home"
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="HomePage" />

    <ShellContent
        Title="Notes"
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate local:NotesPage}"
        Route="NotesPage" />

    <ShellContent
        Title="Flashcards"
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate local:FlashcardsPage}"
        Route="FlashcardsPage" />

    <ShellContent
        Title="Forum"
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate local:ForumPage}"
        Route="ForumPage" />

    <ShellContent
        Title="Study"
        Shell.NavBarIsVisible="False"
        ContentTemplate="{DataTemplate local:StudyPlan}"
        Route="StudyPlan" />

</Shell>